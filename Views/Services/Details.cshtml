@model ServiceLink.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<div class="container py-5">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">@Model.Title</h2>
        <p class="text-muted mb-0">
            Review service details before requesting a booking
        </p>
    </div>

    <div class="row g-4">

        <!-- LEFT: SERVICE INFO -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">

                    <!-- CATEGORY -->
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <span class="badge bg-secondary-subtle text-dark mb-3">
                            @Model.Category
                        </span>
                    }

                    <!-- DESCRIPTION -->
                    <h5 class="fw-semibold mb-2">Service Description</h5>
                    <p class="text-muted mb-0">
                        @Model.Description
                    </p>

                </div>
            </div>
        </div>

        <!-- RIGHT: BOOKING PANEL -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">

                    <h5 class="fw-semibold mb-3">Booking Summary</h5>

                    <!-- PRICE -->
                    <div class="mb-3">
                        <span class="text-muted small">Price</span>
                        <div class="fs-4 fw-bold">
                            RM @Model.Price.ToString("N2")
                        </div>
                    </div>

                    <!-- INFO -->
                    <div class="text-muted small mb-4">
                        Once you submit a booking request, the service provider will review and respond.
                    </div>

                    <!-- CTA -->
                    <a asp-controller="Bookings"
                       asp-action="Create"
                       asp-route-serviceId="@Model.ServiceId"
                       class="btn btn-primary w-100">
                        Request Booking
                    </a>

                </div>
            </div>
        </div>

    </div>

</div>
