@model IEnumerable<ServiceLink.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container py-4">

    <div class="mb-4">
        <h2 class="fw-bold">Available Services</h2>
        <p class="text-muted">
            Browse services and request bookings directly from providers.
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No services are available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">

                            <h5 class="fw-semibold">
                                @service.Title
                            </h5>

                            @if (!string.IsNullOrEmpty(service.Category))
                            {
                                <span class="badge bg-secondary mb-2 align-self-start">
                                    @service.Category
                                </span>
                            }

                        <p class="text-muted small flex-grow-1">
                            @(service.Description?.Length > 120
                                                    ? service.Description.Substring(0, 120) + "..."
                                                    : service.Description)
                    </p>

                            <div class="mt-3 fw-bold">
                                RM @service.Price.ToString("N2")
                            </div>

                            <div class="mt-3">
                                <a asp-action="Details"
                                   asp-route-id="@service.ServiceId"
                                   class="btn btn-primary w-100">
                                    View Details
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
                }
        </div>
    }
</div>
