@model IEnumerable<ServiceLink.Models.Service>

@{
    ViewData["Title"] = "Available Services";
}

<div class="container py-5">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">Available Services</h2>
        <p class="text-muted mb-0">
            Browse services and request bookings directly from providers.
        </p>
    </div>

    <!-- EMPTY STATE -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5 text-muted">
                <h5 class="fw-semibold">No services available</h5>
                <p class="small mb-0">
                    Providers have not listed any services yet.
                </p>
            </div>
        </div>
    }
    else
    {
        <!-- SERVICES GRID -->
        <div class="row g-4">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body d-flex flex-column p-4">

                            <!-- TITLE -->
                            <h5 class="fw-semibold mb-2">
                                @service.Title
                            </h5>

                            <!-- CATEGORY -->
                            @if (!string.IsNullOrEmpty(service.Category))
                            {
                                <div class="mb-2">
                                    <span class="badge bg-secondary-subtle text-dark">
                                        @service.Category
                                    </span>
                                </div>
                            }

                        <!-- DESCRIPTION -->
                        <p class="text-muted small flex-grow-1 mb-3">
                            @(service.Description?.Length > 120
                                                    ? service.Description.Substring(0, 120) + "..."
                                                    : service.Description)
                    </p>

                            <!-- PRICE -->
                            <div class="fw-bold fs-5 mb-3">
                                RM @service.Price.ToString("N2")
                            </div>

                            <!-- CTA -->
                            <a asp-action="Details"
                               asp-route-id="@service.ServiceId"
                               class="btn btn-primary w-100">
                                View Details
                            </a>

                        </div>
                    </div>
                </div>
                }
        </div>
    }

</div>
