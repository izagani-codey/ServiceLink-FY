@model IEnumerable<ServiceLink.Models.Service>
@{
    ViewData["Title"] = "Services";
}

<h2>Services</h2>

<div class="row">
    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <p class="text-muted">No services available yet.</p>
        </div>
    }
    else
    {
        foreach (var s in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@s.Title</h5>
                        <p class="card-text text-truncate" style="max-height:3.6em;">@s.Description</p>
                        <p class="mb-0"><strong>Price:</strong> @s.Price.ToString("C")</p>
                        <a class="btn btn-sm btn-primary mt-2" asp-controller="Services" asp-action="Details" asp-route-id="@s.ServiceId">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
