@model IEnumerable<ServiceLink.ViewModels.BookingListItemViewModel>
@{
    ViewData["Title"] = "Incoming Bookings";
}

<h2>Incoming Bookings</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!Model.Any())
{
    <p class="text-muted">No pending bookings.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Service</th>
                <th>Requested Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.ServiceTitle</td>
                    <td>@booking.RequestedFor.ToShortDateString()</td>
                    <td>@booking.Status</td>
                </tr>
            }
        </tbody>
    </table>

}
