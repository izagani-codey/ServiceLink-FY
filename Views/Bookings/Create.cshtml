@model ServiceLink.ViewModels.BookingCreateViewModel


@{
    ViewData["Title"] = "Request Booking";
}

<div class="container py-4">

    <div class="mb-4 p-3 border rounded bg-light">
        <h4 class="mb-1">Booking Service</h4>
        <p class="mb-0 text-muted">
            You are requesting a booking for:
            <strong>@ViewBag.ServiceTitle</strong>
        </p>
    </div>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="ServiceId" />

        <div class="mb-3">
            <label asp-for="RequestedFor" class="form-label"></label>
            <input asp-for="RequestedFor" type="date" class="form-control" />
            <span asp-validation-for="RequestedFor" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            Submit Booking Request
        </button>

        <a asp-action="Index"
           asp-controller="Services"
           class="btn btn-link">
            Cancel
        </a>
    </form>
</div>
