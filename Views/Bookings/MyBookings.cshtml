@model IEnumerable<ServiceLink.ViewModels.BookingListItemViewModel>


@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">My Bookings</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no bookings yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.ServiceTitle</td>
                    <td>@booking.RequestedFor.ToString("g")</td>
                    <td>@booking.CreatedAt.ToString("g")</td>
                    <td>@booking.Status</td>
                    <td>@booking.Notes</td>
                </tr>
            }

        </div>
    }
</div>
