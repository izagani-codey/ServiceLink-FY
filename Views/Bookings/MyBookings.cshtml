@model IEnumerable<ServiceLink.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">My Bookings</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no bookings yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var booking in Model)
            {
                <div class="list-group-item mb-2">
                    <h5 class="mb-1">@booking.Service.Title</h5>

                    <p class="mb-1">
                        <strong>Date:</strong>
                        @booking.RequestedFor.ToShortDateString()
                    </p>

                    <p class="mb-1">
                        <strong>Status:</strong>
                        <span class="badge bg-warning text-dark">
                            @booking.Status
                        </span>
                    </p>

                    <small class="text-muted">
                        Requested on @booking.CreatedAt.ToShortDateString()
                    </small>
                </div>
            }
        </div>
    }
</div>
