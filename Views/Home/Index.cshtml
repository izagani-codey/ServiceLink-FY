@{
    ViewData["Title"] = "Welcome";
}

<div class="container text-center mt-5">
    <h1 class="display-5 fw-bold">ServiceLink</h1>

    <p class="lead mt-3">
        Find and book trusted services, or manage your service business in one place.
    </p>

    <div class="mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg"
               asp-controller="Services"
               asp-action="Index">
                Go to Services
            </a>
        }
        else
        {
            <a class="btn btn-primary btn-lg me-2"
               asp-controller="Services"
               asp-action="Index">
                Browse Services
            </a>

            <a class="btn btn-outline-secondary btn-lg"
               asp-area="Identity"
               asp-page="/Account/Login">
                Login
            </a>
        }
    </div>
</div>
