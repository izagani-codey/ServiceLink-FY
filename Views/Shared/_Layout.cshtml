@using Microsoft.AspNetCore.Identity
@using ServiceLink.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceLink</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">ServiceLink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                </div>
            }

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Services" ? "active" : "")"
                           asp-controller="Services" asp-action="Index">Services</a>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        if (User.IsInRole("Provider") || User.IsInRole("Admin") || User.IsInRole("MasterDemo"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyServices" ? "active" : "")"
                                   asp-controller="Services" asp-action="MyServices">My Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings" ? "active" : "")"
                                   asp-controller="Bookings" asp-action="Incoming">Incoming</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyBookings" ? "active" : "")"
                               asp-controller="Bookings" asp-action="MyBookings">My Bookings</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                    }
                    else
                    {
                        var userName = User.Identity.Name;
                        var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value;
                        var display = !string.IsNullOrEmpty(fullName) ? fullName : userName;

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @display
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" asp-controller="Bookings" asp-action="MyBookings">My Bookings</a></li>
                                @if (User.IsInRole("Provider") || User.IsInRole("Admin") || User.IsInRole("MasterDemo"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Services" asp-action="Create">Create Service</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="px-3">
                                        <button type="submit" class="btn btn-link text-decoration-none">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        <partial name="_FlashMessages" />
        <!-- THIS is critical: the child view content is rendered here -->
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; @DateTime.Now.Year - ServiceLink - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // small nav scroll shadow (optional)
        document.addEventListener('DOMContentLoaded', function () {
            window.addEventListener('scroll', function () {
                if (window.scrollY > 20) document.body.classList.add('scrolled'); else document.body.classList.remove('scrolled');
            });
        });
    </script>
</body>
</html>

